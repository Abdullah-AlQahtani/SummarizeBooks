<h3><%= @book.bookName %></h3>

<div class="image">
<img src="<%= @book.image %>"/>
</div>
<div class="summarize">
<h5>Click on the record to summarize your own vertion fo this book</h5>
<button  onclick="recordStop()" id="record-stop-button">Record</button>
<button onclick="playAudio()" disabled id="play-audio-button">Play</button>
</div>

<div>
<p><strong>Authors :</strong> <%= @book.bookAuther %></p>
</div>

<div>
    <p><strong>Publish Year:</strong> <%= @book.bookYear %></p>
</div>

<div>
<p><%= @book.bookDescription %></p>
</div>
<div>
<% @audio_summaries.each do |a| %>
    <%= audio_tag a.audio, controls: true %>

<% end %>
 Rating  : <%= rating_for @audio_summary, 'audio', star: 10 , disable_after_rate: true%>  

</div>